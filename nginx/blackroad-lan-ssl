# BlackRoad LAN Mesh - HTTPS
server {
    listen 443 ssl http2;
    server_name lucidia.local 192.168.4.38;
    
    ssl_certificate /etc/nginx/ssl/lucidia.crt;
    ssl_certificate_key /etc/nginx/ssl/lucidia.key;
    
    root /var/www/blackroad/empire;
    index index.html;
    
    location ~ ^/([a-zA-Z0-9_-]+)/?$ {
        alias /var/www/blackroad/$1/;
        index index.html;
    }
    
    location /api/ {
        proxy_pass http://127.0.0.1:8888/;
    }
}
